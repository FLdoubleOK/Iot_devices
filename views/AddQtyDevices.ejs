<!DOCTYPE html>
<html lang="en">
<head>

  <%- include('header.ejs') %>
 
  <style>
    .cursorpointer{
             cursor: pointer;
  }
    .carousel-control-prev-icon, .carousel-control-next-icon { filter: invert(100%); }
 </style>
</head>
<body>
	
  
  <%- include('navbar.ejs') %>


	  <section id="viewitem">
        <div class="container-lg text-center my-5">
          <div class="container px-4 text-center my-5 ">
            <div class="col ">
              <p><h3>Add Qty Devices</h3></p>
             </div>
            <div class="row gx-5">
              <div class="col pt-3">
                <div class="input-group ">
                  <span class="input-group-text" id="basic-addon3"><b>Category</b></span>
                  <select class="form-select form-select-sm" aria-label="Small select example" type="search" id="selectCategory">
               
              </select>
                </div>
              </div>
              <div class="col pt-3">
                <div class="container-fluid">
                  <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search"  id="inputSearch"  placeholder="Search" aria-label="Search"
                      style="height: 2.3rem;">
                    <button class="btn bg-body-secondary btn-sm" type="button" id="btnsearch" >Search</button>
                  </form>
                </div>
              </div>
            </div>
          </div>


          <table class="table table-sm table-bordered table-hover text-center text-capitalize table table-striped cursorpointer" id="table">
                <thead>
                  <tr >
                    <th scope="col">No</th>
                    <th scope="col">Item code</th>
                    <th scope="col">Category</th>
                    <th scope="col">Type</th>
                    <th scope="col">Price(unit)</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Vendor Name</th>
                  </tr>
                </thead>
        
                <tbody id="tableAddqty"></tbody>
               </table>
            </div>
    </section>
     <!-- modal -->
     <div class="modal fade" id="exampleModalToggle" aria-labelledby="exampleModalToggleLabel" tabindex="-1" 
     aria-hidden="true" style="display: none;">
       <div class="modal-dialog modal-lg modal-dialog-centered">
         <div class="modal-content">
           <div class="modal-header">
             <h1 class="modal-title fs-5" id="exampleModalToggleLabel">Add Qty Devices</h1>
             <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
           </div>
           <div class="modal-body">
            
             <div class="container text-center">
               <div class="row align-items-center">
                 <div class="col">
                  <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img src=" " id="PictureDevice" class="d-block w-100" alt="...">
                      </div>
                    
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                      data-bs-slide="prev">
                      <span class="carousel-control-prev-icon " aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                      data-bs-slide="next">
                      <span class="carousel-control-next-icon " aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                  </div>
                 </div>
                 <div class="col">
                   <div class="mb-3 row">
                     <label class="col-sm-4 col-form-label" id="itemName" for="floatingInputDisabled">Item Code</label>
                     <div class="col-sm-8">
                       <input type="text" class="form-control" id="textitemName"
                         placeholder="ItemCode" disabled="">
                     </div>
                   </div>
       
                   <div class="mb-3 row">
                     <label class="col-sm-4 col-form-label" id="category">Category</label>
                     <div class="col-sm-8">
                       <input class="form-control" type="text" placeholder="Category" id="textcategory" aria-label="default input example"  disabled="">
                     </div>
                   </div>

                   <div class="mb-3 row">
                     <label class="col-sm-4 col-form-label" id="type">Type</label>
                     <div class="col-sm-8">
                      <textarea class="form-control" rows="2" id="textType" disabled=""></textarea>
                     </div>
                   </div>

                   
                   <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label" id="Vender">VenderName</label>
                    <div class="col-sm-8">
                     <textarea class="form-control"  id="textVender" disabled=""></textarea>
                    </div>
                  </div>

                   <div class="mb-3 row">
                     <label class="col-sm-4 col-form-label" id="Quantity">Quantity</label>
                     <div class="col"><input class="form-control" type="text" id="textQuantityNew" placeholder="New Quantity" aria-label="default input example"></div>
                     <div class="col-sm-8">
                     </div>
                   </div>

                   <div class="mb-3 row">
                     <label class="col-sm-4 col-form-label" id="remark">Remark</label>
                     <div class="col-sm-8">
                       <input class="form-control" type="text" placeholder="Remark" id="textRemark" aria-label="default input example">
                     </div>
                   </div>
                 </div>
                 
               </div>
             </div>
             
          
          
           </div>
           <div class="modal-footer">
             <button type="button" class="btn btn-success"  id="btnSave" >Save</button>
             <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModalToggle" id="btnClose" >Close</button>
           </div>
         </div>s
       </div>
     </div>
     <!-- end modal -->

     <!-- QR-Code -->
<div class="modal fade" id="modalQrCodeForPicking" aria-labelledby="exampleModalToggleLabel" tabindex="-1"
aria-hidden="true" style="display: none">
<div class="modal-dialog modal-lg modal-dialog-centered">
  <div class="modal-content">
    <div class="modal-body">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div id="reader"></div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Close</button>
    </div>
  </div>
</div>
</div>
<!-- end qr-code -->
</body>
<script src="/js/addQty.js"></script>

</html>
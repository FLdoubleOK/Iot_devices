<!DOCTYPE html>
<html lang="en">

<head>


  <%- include('header.ejs') %>


    <style>
      .cursorpointer {
        cursor: pointer;
      }

      .carousel-control-prev-icon,
      .carousel-control-next-icon {
        filter: invert(100%);
      }

      .text {
        text-align: left;
      }
    </style>
</head>

<body>

  <%- include('navbar.ejs') %>
    <section id="viewitem">
      <div class="container-fluid text-center my-5 px-5">
        <div class="position-relative">
          <div class="position-absolute top-0 end-0 px-5"> <a class="nav-link"
              href="/devices/HistoryApprovedPage"><button type="button" class="btn btn-primary"
                style="width: 12rem;">History Approved</button></a></div>
        </div>
        <div class="container px-4 text-center my-4 ">
          <div class="container text-center">
            <div class="row align-items-center">
              <div class="col">

              </div>
              <div class="col">
                <p>
                <h3>Approved</h3>
                </p>
              </div>
              <div class="col">

              </div>
            </div>
          </div>
        </div>

        <table
          class="table table-sm table-bordered table-hover text-center text-capitalize table table-striped cursorpointer"
          id="table">
          <thead style="font-size: 14px;">
            <tr>
              <th scope="col">No</th>
              <th scope="col">ID</th>
              <th scope="col">Status</th>
              <th scope="col">ItemCode</th>
              <th scope="col">Request</th>
              <th scope="col">Category</th>
              <th scope="col">type</th>
              <th scope="col">Quantity </th>
              <th scope="col">Department</th>
              <th scope="col">Inchage</th>
              <th scope="col">Remark</th>
              <th scope="col">Request By</th>
              <th scope="col">UpdateDate</th>
            </tr>
          </thead>

          <tbody id="tableapproved"></tbody>
        </table>



      </div>



      <!-- modal -->
      <div class="modal fade" id="exampleModalToggle" aria-labelledby="exampleModalToggleLabel" tabindex="-1"
        aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-lg modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalToggleLabel">Request</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

              <div class="row align-items-center">
                <div class="col">
                  <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img src=" " id="PictureDevice" class="d-block w-100" alt="...">
                      </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                      data-bs-slide="prev">
                      <span class="carousel-control-prev-icon " aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                      data-bs-slide="next">
                      <span class="carousel-control-next-icon " aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>


                  </div>


                </div>
                <div class="col">

                  <div class="row mb-3">
                    <label for="colFormLabel" class="col-sm-4 col-form-label" id="requeat">Request</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control" id="textstatus" placeholder="Status" disabled="">
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label for="colFormLabel" class="col-sm-4 col-form-label" id="itemName">ItemCode</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control" id="textitemName" placeholder="ItemCode" disabled="">
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label for="colFormLabel" class="col-sm-4 col-form-label" id="Type">Type</label>
                    <div class="col-sm-8">
                      <textarea class="form-control" rows="2" id="textType" disabled=""></textarea>
                    </div>
                  </div>


                  <div class="row mb-3">
                    <label for="colFormLabel" class="col-sm-4 col-form-label" id="quantity">Qty</label>
                    <div class="col-sm-8">
                      <input type="Request" class="form-control" id="textQuantity" placeholder="Quantity" disabled="">
                    </div>
                  </div>


                  <div class="row mb-3">
                    <label for="colFormLabel" class="col-sm-4 col-form-label" id="Requester">Request By</label>
                    <div class="col-sm-8">
                      <input type="Request" class="form-control" id="textrequester" placeholder="Requester" disabled="">
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label for="colFormLabel" class="col-sm-4 col-form-label" id="department">Department</label>
                    <div class="col-sm-8">
                      <input type="Request" class="form-control" id="textDepartment" placeholder="Department"
                        disabled="">
                    </div>
                  </div>

                  <div class="row mb-3">
                    <label for="colFormLabel" class="col-sm-4 col-form-label" id="remark">Remark</label>
                    <div class="col-sm-8">
                      <textarea class="form-control" rows="2" id="textRemark"></textarea>
                    </div>
                  </div>
                </div>

              </div>


            </div>
            <div class="modal-footer">
              <button class="btn btn-success" id="btnApproved">Approved</button>
              <button class="btn btn-danger" id="btnRejected">Rejected</button>
              <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModalToggle"
                id="btn-close">Close</button>
            </div>
          </div>
        </div>
      </div>
      <!-- end modal -->

      <!-- QR-Code -->
      <div class="modal fade" id="modalQrCodeForPicking" aria-labelledby="exampleModalToggleLabel" tabindex="-1"
        aria-hidden="true" style="display: none">
        <div class="modal-dialog modal-lg modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-body">
              <div class="container-fluid">
                <div class="row justify-content-center">
                  <div id="reader"></div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </section>


</body>
<script src="/js/approved.js"></script>

</html>
<!DOCTYPE html>
<html lang="en">

<head> 


  <%- include('header.ejs') %>
  
<style>
  .table1 {
    text-align: left;
  }
</style>

</head>

<body>

  <%- include('navbar.ejs') %>

  <section id="viewitem">
    <div class="container-fluid text-center my-5" >
      <div class="col">
        <p>
          <h3>ADD New Devices</h3>
          </p>
      </div>
      <div class="row" >
     
   <div class="col-sm-6" >
    <div class="row">
      <div class="col-sm-6" >
        <div class="mb-6 row my-3">
          <label class="col-sm-4 col-form-label" id="itemName" for="floatingInputDisabled">Item Code</label>
          <div class="col-sm-8">
            <input type="text" class="form-control form-control-sm" id="textitemName" placeholder="ItemCode" disabled="">
          </div>
        </div>
   
        <div class="mb-3 row">
          <label class="col-sm-4 col-form-label" id="category">Category</label>
          <div class="col-sm-8">
            <div class="input-group ">
              <select class="form-select form-select-sm" aria-label="Small select example" type="search" id="selectCategory" >
              </select>
            </div>
          </div>
        </div>
        <div class="mb-3 row">
          <label class="col-sm-4 col-form-label" id="type" for="floatingtypeInputDisabled">Type</label>
          <div class="col-sm-8">
            <input type="text" class="form-control form-control-sm" id="textType" placeholder="Type" >
          </div>
        </div>
        <div class="mb-3 row">
          <label class="col-sm-4 col-form-label" id="description">Description</label>
          <div class="col-sm-8">
            <input class="form-control form-control-sm" type="text" placeholder="Description" aria-label="default input example" id="textDescription">
          </div>
        </div>
        <div class="mb-3 row">
          <label class="col-sm-4 col-form-label" id="addphoto">ADD Photo</label>
          <div class="col-sm-8">
            <input class="form-control form-control-sm" type="file" id="textfilePhoto" multiple enctype="multipart/form-data" name="avatar">
          </div>
        </div>
        <div class="mb-3 row">
          <label class="col-sm-4 col-form-label" id="addLinkVideo">ADD Link Video</label>
          <div class="col-sm-8">
            <form action="/profile" method="post" enctype="multipart/form-data" >
               <input class="form-control form-control-sm" type="text" placeholder="link Video" aria-label="default input example" id="textfileLinkVideo" name="avatar" disabled="" /> 
            </form>
           
          </div>
        </div>.
      </div>
      <div class="col-sm-6 my-4" >
        <div class="mb-3 row">
          <label class="col-sm-4 col-form-label" id="price">Price</label>
          <div class="col-sm-8">
            <input class="form-control form-control-sm" type="number" min="0" placeholder="Price/Unit" aria-label="default input example" id="textPrice">
          </div>
        </div>

        <div class="mb-3 row">
          <label class="col-sm-4 col-form-label" id="quantity">Quantity</label>
          <div class="col-sm-8">
            <input class="form-control form-control-sm" type="number"  min="0" placeholder="Quantity" aria-label="default input example" id="textQuantity">
          </div>
        </div>
        <div class="mb-3 row">
          <label class="col-sm-4 col-form-label" id="venderName">Vender Name</label>
          <div class="col-sm-8">
            <input class="form-control form-control-sm" type="text" id="textVender" placeholder="New VenderName" aria-label="default input example">
            <p></p>
            <div class="input-group ">
              <select class="form-select form-select-sm" aria-label="Small select example" id="selectVender">
              

              </select>
            </div>
          </div>
        </div>

        <div class="mb-3 row">
          <label class="col-sm-4 col-form-label" id="addFileVideo">ADD Video</label>
          <div class="col-sm-8">
            <input class="form-control form-control-sm" type="file" id="textaddFileVideo" multiple enctype="multipart/form-data" name="avatar" disabled="">
          </div>
        </div>

        <div class="mb-3 row">
          <label class="col-sm-4 col-form-label" id="remark">Remark</label>
          <div class="col-sm-8">
            <input class="form-control form-control-sm" type="text" placeholder="Remark" aria-label="default input example" id="textRemark">
          </div>
        </div>
        

      </div>

        
    </div>
   
    <div class="row justify-content-md-center " >
      <div class=" col-md-4 ">
        <button type="button" class=" btn btn-success btn-sm" style="width: 9rem; font-size: 18px;" id="btnSave">Save</button>
      </div>
      <div class="col-md-4">
        <button type="button" class="btn btn-danger btn-sm" style="width: 9rem; font-size: 1.2rem;" id="btnClear">Clear</button>
      </div>
    </div>
     
        </div>

        <div class="col-sm-6" >     
          <div class="table-responsive"> 
           <table class="table table-sm table-bordered table-hover text-center text-capitalize table table-striped cursorpointer" id="table">
          <thead>
            <tr style="font-size: 12px;">
              <th scope="col">No</th>
              <th scope="col">Itemcode</th>
              <th scope="col">Category</th>
              <th scope="col">Type</th>
              <th scope="col">Quantity</th>
              <th scope="col">Price</th>
              <th scope="col">Vender</th>
              <th scope="col">UpdateDate</th>
            </tr>
          </thead>
  
          <tbody id="tablelist"></tbody>
        </table>
      </div>
      </div>
      </div> 

     
    </div>

    <!-- QR-Code -->
<div class="modal fade" id="modalQrCodeForPicking" aria-labelledby="exampleModalToggleLabel" tabindex="-1"
aria-hidden="true" style="display: none">
<div class="modal-dialog modal-lg modal-dialog-centered">
  <div class="modal-content">
    <div class="modal-body">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div id="reader"></div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Close</button>
    </div>
  </div>
</div>
</div>
  </section>

</body>

<script src="/js/addNew.js"></script>
</html>
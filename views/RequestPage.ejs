<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('header.ejs') %>
  <style>
    .cursorpointer {
      cursor: pointer;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
      filter: invert(100%);
    }

    table,
    td {
      text-align: center;
    }

    #exampleModalToggle .carousel-item img {
      max-height: 300px;
      max-width: 100%;
      object-fit: contain;
      justify-content: center;
    }

    .table1 {
      text-align: left;
    }
  </style>
</head>

<body>

<%- include('navbar.ejs') %>

  <section id="viewitem" >

    <div class="container-fluid text-center my-5" >
      <div class="container px-4 text-center my-4" >
     
          <p><h3>Request Devices in stock</h3></p>
       

        <div class="row gx-5">
          <div class="col pt-3">
            <div class="input-group ">
              <span class="input-group-text"><b>Category</b></span>
              <select class="form-select form-select-sm" aria-label="Small select example" type="search" id="selectCategory" placeholder="Search"></select>
            </div>
          </div>

          <div class="col pt-3" >
            <div class="container-fluid">
              <form class="d-flex">
                <input class="form-control me-2" id="inputSearch" type="search" placeholder="Search" aria-label="Search"
                  style="height: 2.3rem;">
                <button class="btn bg-body-secondary btn-sm" id="btnsearch" type="button">Search</button>
              </form>
            </div>
          </div>
        </div>
      </div>

 <div class="container-lg" >
  <div class="verical-center">
    <table class=" table table-sm table-bordered table-hover text-center text-capitalize table table-striped cursorpointer" style="width: 100%;"   id="table">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col" class="text-nowrap" >Item code</th>
          <th scope="col">Category</th>
          <th scope="col">Type</th>
          <th scope="col">Total</th>
          <th scope="col">Borrow</th>
          <th scope="col">Transfer</th>
          <th scope="col">Support</th>
          <th scope="col">NG</th>
          <th scope="col">Remain</th>
        </tr>
      </thead>

      <tbody id = "TableRemain"> </tbody>
    </table>
  </div>

 </div>
   
    </div>
    
<!-- QR-Code -->
<div class="modal fade" id="modalQrCodeForPicking" aria-labelledby="exampleModalToggleLabel" tabindex="-1"
aria-hidden="true" style="display: none">
<div class="modal-dialog modal-lg modal-dialog-centered">
  <div class="modal-content">
    <div class="modal-body">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div id="reader"></div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Close</button>
    </div>
  </div>
</div>
</div>


    <!-- modal -->
    <div class="modal fade" id="exampleModalToggle" aria-labelledby="exampleModalToggleLabel" tabindex="-1"
      aria-hidden="true" style="display: none;">
      <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalToggleLabel">Request</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
    
          <div class="modal-body">
            <div class="row align-items-center ">
              
                <div class="col">
                  <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner" style="height: 300px;">
                      <div class="carousel-item active">
                        <img  id="PictureDevice" src =" " class="d-block w-100" alt="...">
                      </div>
                      <div class="carousel-item active">
                        <img  id="PictureDevice2" src =" " class="d-block w-100" alt="...">
                      </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                      data-bs-slide="prev">
                      <span class="carousel-control-prev-icon " aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                      data-bs-slide="next">
                      <span class="carousel-control-next-icon " aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                  </div>

                    <div class="mb-3 row mt-2">
                  <label class=" col-form-label" id="Description"
                    for="floatingtypeInputDisabled">Description</label>
                  <div class="col-sm">
                    <textarea class="form-control" rows="7" id="textDescription" disabled=""></textarea>
                  </div>
                </div>
                 </div>
              
            
                <div class="col">
    
                  <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label" id="itemName" for="floatingInputDisabled">Item Code</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control" id="textitemName" placeholder="ItemCode" disabled="">
                    </div>
                  </div>
    
    
                  <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label" id="category" for="floatingCatInputDisabled">Category</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control" id="textcategory" placeholder="Category" disabled="">
                    </div>
                  </div>
    
                 
    
                  <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label" id="type" for="floatingtypeInputDisabled">Type</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control" id="textType" placeholder="Type" disabled="">
                    </div>
                  </div>
    
    
                  <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label" for="selectRequest">Request<span style="color: red;vertical-align: middle ;"> *</span></label>
                    <div class="col-sm-8">
                      <div class="input-group ">
                        <select class="form-select form-select-sm" id="selectRequest" aria-label="Small select example" required>
                         
                       
                        </select>
                      </div>
                    </div>
                  </div>
    
                  <div class="mb-3 row" id="movetodeptField">
                    <label class="col-sm-4 col-form-label" for="nameMoveToDept">Department<span style="color: red;vertical-align: middle ;"> *</span></label>
                    <div class="col-sm-8">
                      <div class="input-group ">
                        <select class="form-select form-select-sm"  id="nameMoveToDept" aria-label="Small select example"  ></select>
                      </div>
                    </div>
                  </div>

                  <div class="mb-3 row" id="quantityField">
                    <label class="col-sm-4 col-form-label" id="quantity">Remain<span style="color: red;vertical-align: middle ;"> *</span></label>
                    <div class="col-3"><input class="form-control" type="number" min="0" id="textRemain" placeholder="Remain"
                        aria-label="default input example" disabled=""></div>
                   
                  </div>

                  <div class="mb-3 row" id="RemainField">
                    <label class="col-sm-4 col-form-label" id="quantity">Quantity<span style="color: red;vertical-align: middle ;"> *</span></label>
                        <div class="col-3"><input class="form-control" type="number" min="0" id="textQuantity" placeholder="Quantity"
                          aria-label="default input example"></div>
                   
                  </div>
    
                  <div class="mb-3 row" id="remarkField">
                    <label class="col-sm-4 col-form-label" id="nameRemark">Remark</label>
                    <div class="col-sm-8">
                      <textarea class="form-control"  rows="2" id="textRemark"></textarea>
                    </div>
                  </div>
    
                  <div class="mb-3 row" id="nameInchargeField">
                    <label class="col-sm-4 col-form-label" for="nameIncharge">In charge<span style="color: red;vertical-align: middle ;"> *</span></label>
                    <div class="col-sm-8">
                      <div class="input-group ">
                        <select class="form-select form-select-sm" " id="nameIncharge" aria-label="Small select example"></select>
                      </div>
                    </div>
                  </div>
    
                  <div class="mb-3 row" id="managementField">
                    <label class="col-sm-4 col-form-label" for="nameManager">Management<span style="color: red;vertical-align: middle ;"> *</span></label>
                    <div class="col-sm-8">
                      <div class="input-group ">
                        <select class="form-select form-select-sm"  id="nameManager" aria-label="Small select example">
                        </select>
                      </div>
                    </div>
                  </div>
    
                  

                  <div class="mb-3 row">
                    <label class="col-sm-4 col-form-label" id="Duedate" for="floatingtypeInputDisabled">Duedate<span style="color: red;vertical-align: middle ;"> *</span></label>
                    <div class="col-sm-8">
                      <input type="date" id="date" name="date">
                    </div>
                  </div>

                </div>
             
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="btnSend">Send</button>
            <button type="button" class="btn btn-secondary" id="btnClose" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <!-- end model -->
  </section>

</body>
<script src="/js/RequestPage.js"></script>


</html>
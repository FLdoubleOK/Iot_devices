<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('header.ejs') %>

    <style>
      .cursorpointer {
        cursor: pointer;
      }

      .carousel-control-prev-icon,
      .carousel-control-next-icon {
        filter: invert(100%);
      }

      .text {
        text-align: left;
      }
    </style>

</head>

<body>


  <%- include('navbar.ejs') %>


    <section id="viewitem">
      <div class="container-fluid text-center my-5 px-5">
        <div class="container px-4 text-center my-4 ">
          <div class="col ">
            <p>
            <h3>History Approved</h3>
            </p>
          </div>
          <div class="row gx-5 py-3 ">
            <div class="container-fluid">
              <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" id="inputSearch" aria-label="Search"
                  style="height: 2.3rem;">
                <button class="btn bg-body-secondary btn-sm" id="btnsearch" type="button">Search</button>
              </form>
            </div>
          </div>

        </div>


        <table
          class="table table-sm table-bordered table-hover text-center text-capitalize table table-striped cursorpointer"
          id="table">
          <thead>
            <tr class="table-secondary" style="font-size: 14px;">
              <th scope="col">No</th>
              <th scope="col">Status</th>
              <th scope="col">ItemCode</th>
              <th scope="col">Request</th>
              <th scope="col">Category</th>
              <th scope="col">Type</th>
              <th scope="col">Quantity</th>
              <th scope="col">Department</th>
              <th scope="col">Inchage</th>
              <th scope="col">Remark</th>
              <th scope="col">Requestby</th>
              <th scope="col">UpdateDate </th>
              <th scope="col">MoveDate</th>
            </tr>
          </thead>

          <tbody id="tablelist">
          </tbody>
        </table>



      </div>


      <!-- modal -->
      <div class="modal fade" id="exampleModalToggle" aria-labelledby="exampleModalToggleLabel" tabindex="-1"
        aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-lg modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalToggleLabel">History Approved</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
              <div class="row align-items-center">
                <div class="col">
                  <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img src="Devices/photo/IoT-ST-002/IoT-ST-002.png" id="PictureDevice" class="d-block w-100"
                          alt="...">
                      </div>
                      <div class="carousel-item">
                        <video width="400" controls>
                          <source src="Devices/Video/IoT-ST-002/Raspberry Pi 4_ your new $35 computer.mp4"
                            type="video/mp4">
                        </video>
                      </div>
                      <div class="carousel-item">
                        <img src="Devices/photo/IoT-ST-003/IoT-ST-003.jpg " class="d-block w-100" alt="...">
                      </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                      data-bs-slide="prev">
                      <span class="carousel-control-prev-icon " aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                      data-bs-slide="next">
                      <span class="carousel-control-next-icon " aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                  </div>
                </div>
                <div class="col">
                  <div class="col">

                    <div class="row mb-3">
                      <label class="col-sm-4 col-form-label" id="requeat">Status</label>
                      <div class="col-sm-8">
                        <input type="ItemCode" class="form-control" id="textstatus" placeholder="Status_request"
                          disabled="">
                      </div>
                    </div>

                    <div class="mb-3 row">
                      <label class="col-sm-4 col-form-label" id="itemName">Item Code</label>
                      <div class="col-sm-8">
                        <input type="text" class="form-control" id="textitemName" placeholder="ItemCode" disabled="">
                      </div>
                    </div>

                    <div class="mb-3 row">
                      <label class="col-sm-4 col-form-label" id="quantity">Qty</label>
                      <div class="col-sm-8">
                        <input type="Request" class="form-control" id="textQuantity" disabled="" placeholder="Quantity">
                      </div>
                    </div>


                    <div class="mb-3 row">
                      <label class="col-sm-4 col-form-label" id="category">Category</label>
                      <div class="col-sm-8">
                        <input type="text" class="form-control" id="textcategory" placeholder="Category" disabled="">
                      </div>
                    </div>


                    <div class="mb-3 row">
                      <label class="col-sm-4 col-form-label" id="requester">Requester</label>
                      <div class="col-sm-8">
                        <input type="text" class="form-control" id="textrequester" placeholder="Category" disabled="">
                      </div>
                    </div>

                    <div class="mb-3 row">
                      <label class="col-sm-4 col-form-label" id="department">Department</label>
                      <div class="col-sm-8">
                        <input type="text" class="form-control" id="textDepartment" placeholder="Department"
                          disabled="">
                      </div>
                    </div>




                    <div class="mb-3 row">
                      <label class="col-sm-4 col-form-label" id="remark">Remark</label>
                      <div class="col-sm-8">
                        <textarea class="form-control" rows="2" id="textRemark" disabled=""></textarea>
                      </div>
                    </div>

                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnClose">Close</button>
            </div>
          </div>
        </div>
      </div>
      <!-- end modal -->

      <!-- QR-Code -->
      <div class="modal fade" id="modalQrCodeForPicking" aria-labelledby="exampleModalToggleLabel" tabindex="-1"
        aria-hidden="true" style="display: none">
        <div class="modal-dialog modal-lg modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-body">
              <div class="container-fluid">
                <div class="row justify-content-center">
                  <div id="reader"></div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </section>



</body>
<script src="/js/historyApproved.js"></script>

</html>
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('header.ejs') %>
    <style>
      .cursorpointer {
        cursor: pointer;
      }

      .text {
        text-align: left;
      }

      .carousel-control-prev-icon,
      .carousel-control-next-icon {
        filter: invert(100%);
      }
    </style>
  </head>

  <body>
    <%- include('navbar.ejs') %>

    <section id="viewitem">
      <div class="container-fluid text-center my-5 px-5">
        <div class="container px-4 text-center my-2">
          <div class="col">
            <h3>CONTROL STAFF</h3>
          </div>

          <div class="row gx-5">
            <div class="col col-lg-2 pt-2">
              <p class="text-center"></p>
            </div>
            <div class="col col-lg-8 pt-2">
              <div class="input-group">
                <span class="input-group-text" id="basic-addon3"
                  ><b>Category</b></span
                >
                <select
                  class="form-select form-select-sm"
                  aria-label="Small select example"
                  id="selectCategory"
                ></select>
              </div>
            </div>

            <div class="col col-lg-2 pt-2">
              <a class="nav-link" href="/devices/HistoryRequest"
                ><button
                  type="button"
                  class="btn btn-primary"
                  style="width: 9rem"
                >
                  History Devices
                </button></a
              >
            </div>
          </div>
        </div>

        <div
          class="col my-3 justify-content-center"
          style="background-color: #c1fddf; height: 2.3rem"
        >
          <h4>List New Request</h4>
        </div>
        <div class="table-responsive">
          <table
            class="table table-sm table-bordered table-hover text-center text-capitalize table table-striped cursorpointer"
            id="table"
          >
            <thead style="font-size: 10px">
              <tr>
                <th scope="col">NO</th>
                <th scope="col" class="ID">ID</th>
                <th scope="col">Status</th>
                <th scope="col">Request</th>
                <th scope="col" class="text-nowrap">Item Code</th>
                <th scope="col">Category</th>
                <th scope="col">Position</th>
                <th scope="col">Quantity</th>
                <th scope="col">Remark</th>
                <th scope="col">Department</th>
                <th scope="col">RequestBy</th>
                <th scope="col">UpdateDate</th>
              </tr>
            </thead>

            <tbody id="tablelist"></tbody>
          </table>
        </div>
      </div>
    </section>

    <div></div>
    <!-- modal -->
    <div
      class="modal fade"
      id="exampleModalToggle"
      aria-labelledby="exampleModalToggleLabel"
      tabindex="-1"
      aria-hidden="true"
      style="display: none"
    >
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalToggleLabel">
              List Request
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div class="row align-items-center">
              <div class="col">
                <div id="carouselExample" class="carousel slide">
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img
                        src=" "
                        id="PictureDevice"
                        class="d-block w-100"
                        alt="..."
                      />
                    </div>
                  </div>
                  <button
                    class="carousel-control-prev"
                    type="button"
                    data-bs-target="#carouselExample"
                    data-bs-slide="prev"
                  >
                    <span
                      class="carousel-control-prev-icon"
                      aria-hidden="true"
                    ></span>
                    <span class="visually-hidden">Previous</span>
                  </button>
                  <button
                    class="carousel-control-next"
                    type="button"
                    data-bs-target="#carouselExample"
                    data-bs-slide="next"
                  >
                    <span
                      class="carousel-control-next-icon"
                      aria-hidden="true"
                    ></span>
                    <span class="visually-hidden">Next</span>
                  </button>
                </div>
              </div>
              <div class="col text-center">
                <div class="row mb-3">
                  <label
                    for="colFormLabel"
                    class="col-sm-3 col-form-label"
                    id="status"
                    >Request</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="ItemCode"
                      class="form-control"
                      id="textstatus"
                      placeholder="Status"
                      disabled=""
                    />
                  </div>
                </div>

                <div class="row mb-3">
                  <label
                    for="colFormLabel"
                    class="col-sm-3 col-form-label"
                    id="itemName"
                    >ItemCode</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="ItemCode"
                      class="form-control"
                      id="textitemName"
                      placeholder="ItemCode"
                      disabled=""
                    />
                  </div>
                </div>

                <div class="row mb-3">
                  <label
                    class="col-sm-3 col-form-label"
                    id="category"
                    for="floatingCatInputDisabled"
                    >Category</label
                  >

                  <div class="col-sm-9">
                    <input
                      type="text"
                      class="form-control"
                      id="textcategory"
                      placeholder="Category"
                      disabled=""
                    />
                  </div>
                </div>

                <div class="row mb-3">
                  <label
                    for="colFormLabel"
                    class="col-sm-3 col-form-label"
                    id="type"
                    >Type</label
                  >
                  <div class="col-sm-9">
                    <textarea
                      class="form-control"
                      rows="2"
                      id="textType"
                      disabled=""
                    ></textarea>
                  </div>
                </div>

                <div class="row mb-3">
                  <label
                    for="colFormLabel"
                    class="col-sm-3 col-form-label"
                    id="department"
                    >Department</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="Request"
                      class="form-control"
                      id="textDepartment"
                      placeholder="Department"
                      disabled=""
                    />
                  </div>
                </div>
                <div class="row mb-3">
                  <label
                    for="colFormLabel"
                    class="col-sm-3 col-form-label"
                    id="quantity"
                    >Qty</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="Request"
                      class="form-control"
                      id="textQuantity"
                      placeholder="Quantity"
                      disabled=""
                    />
                  </div>
                </div>
                <div class="row mb-3">
                  <label
                    for="colFormLabel"
                    class="col-sm-3 col-form-label"
                    id="Position"
                    >Position</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="Request"
                      class="form-control"
                      id="textPosition"
                      placeholder="Position"
                      disabled=""
                    />
                  </div>
                </div>

                <div class="row mb-3">
                  <label
                    for="colFormLabel"
                    class="col-sm-3 col-form-label"
                    id="Position"
                    >Remark</label
                  >
                  <div class="col-sm-9">
                    <input
                      type="Request"
                      class="form-control"
                      id="textRemark"
                      placeholder="Remark"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button class="btn btn-success" id="btnApproved">Confirm</button>
            <button class="btn btn-danger" id="btnRejected">Rejected</button>
            <button
              class="btn btn-secondary"
              data-bs-toggle="modal"
              data-bs-target="#exampleModalToggle"
              id="btnClose"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- end modal -->

    <!-- QR-Code -->
    <div
      class="modal fade"
      id="modalQrCodeForPicking"
      aria-labelledby="exampleModalToggleLabel"
      tabindex="-1"
      aria-hidden="true"
      style="display: none"
    >
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-body">
            <div class="container-fluid">
              <div class="row justify-content-center">
                <div id="reader"></div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-sm btn-secondary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script src="/js/Staff_NewRequest.js"></script>
</html>
